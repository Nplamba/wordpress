body{
    background: #ddd;
    font-family: monospace;
}

.flex{
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
}
.flex-1{
    width: 18%;
}
.flex-2{
    width: 38%;
}
p{
    padding: 10px 20px;
}
li{
    list-style: none;
}
section{
    margin: 60px auto;
    padding: 20px;
}
.message{
    width: 42%;
}
.menu-item a{
    text-decoration: none;
    color: #000;
}
nav{
    min-height: 60px;
    align-items: baseline;
    padding: 10px 15px;
    background: #fff;

}
.head-navigation, .footer-navigation{
  justify-content: space-between;
}
.logo{
    width: 25%;
}
.head-navigation{
    width: 75%;
}
.service-cards{
    width: 75%;
}
.card{
    border: 1px solid #fff;
    padding: 15px;
    margin: 15px;
    border-radius: 16px;
}
.card p{
    padding: 0;
}
.clients{
    width: 75%;
}
.clients img{
    margin: 10px 30px;
}
.copyright{
    text-align: center;
    background: #fff;
    padding: 10px;
}
